<Window x:Class="Excel4Engineers.WPFControls.ImageDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Excel4Engineers.WPFControls"
        mc:Ignorable="d"
        Title="ImageDisplay" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <StackPanel Margin="4">
        <Image x:Name="Image" Width="500" Height="300" Margin="0,0,0,4"/>
        <Button Height="30" Click="Button_Click" Content="Close"/>
    </StackPanel>
</Window>
