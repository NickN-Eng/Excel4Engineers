<Window x:Class="Excel4Engineers.WPFControls.MultiImageDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Excel4Engineers.WPFControls"
        mc:Ignorable="d"
        Title="MultiImageDisplay" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <StackPanel Margin="4">
        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
            <Button x:Name="PrevButton" Width="30" Click="PrevButton_Click" >
                <Image Source="Icons/Left.png" Height="50" Margin="2"/>
            </Button>
            <Image x:Name="Image" Width="500" Height="300" Margin="4,0"/>
            <Button x:Name="NextButton"  Width="30" Click="NextButton_Click">
                <Image Source="Icons/Right.png" Height="50" Margin="2"/>
            </Button>
        </StackPanel>
        <Button Height="30" Click="Button_Click" Content="Close">
        </Button>
    </StackPanel>
</Window>
